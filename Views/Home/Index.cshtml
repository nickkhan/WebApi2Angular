
 <div data-ng-controller="carsController" class="container" >
    <div class="row" ng-cloak>
        <div class="col-md-12">
            <strong class="error">{{ error }}</strong>
            <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Add New</a></p>
            <form name="addCar" data-ng-show="addMode" style="width:600px;margin:0px auto;">
                <div class="form-group">
                    <label for="cname" class="col-sm-2 control-label">Manufacturer:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="manufacturer" placeholder="please enter your car manufacturer" data-ng-model="newcar.manufacturer" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="model" class="col-sm-2 control-label">Model:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="model" placeholder="please enter the model of your car" data-ng-model="newcar.model" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="year" class="col-sm-2 control-label">Year:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="year" placeholder="please enter the year" data-ng-model="newcar.year" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="color" class="col-sm-2 control-label">Color:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="color" placeholder="please enter the color" data-ng-model="newcar.color" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="passengercount" class="col-sm-2 control-label">Passenger count:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="PassengerSeatingCount" placeholder="please passenger seating count" data-ng-model="newcar.passengerSeatingCount" required />
                    </div>
                </div>
                <p data-ng-show="addMode"><a data-ng-click="add(newcar)" href="javascript:;">Create Car</a></p>
                <br />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <br />
            <br />
        </div>
    </div>
    <div class="row" ng-cloak>
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="width:800px" ng-cloak>
                    <tr>
                        <th>#</th>
                        <th>Manufacturer</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Color</th>
                        <th>PassengerSeating</th>
                    </tr>
                    <tr data-ng-repeat="car in cars">
                        <td><strong data-ng-hide="editMode">{{ car.carId }}</strong></td>
                        <td>
                            <p data-ng-hide="car.editMode">{{ car.manufacturer }}</p>
                            <input data-ng-show="editMode" type="text" data-ng-model="car.manufacturer" />
                        </td>
                        <td>
                            <p data-ng-hide="car.editMode">{{ car.model }}</p>
                            <input data-ng-show="editMode" type="text" data-ng-model="car.model" />
                        </td>
                        <td>
                            <p data-ng-hide="car.editMode">{{ car.year }}</p>
                            <input data-ng-show="editMode" type="text" data-ng-model="car.year" />
                        </td>
                        <td>
                            <p data-ng-hide="car.editMode">{{ car.color }}</p>
                            <input data-ng-show="editMode" type="text" data-ng-model="car.color" />
                        </td>
                        <td>
                            <p data-ng-hide="car.editMode">{{ car.passengerSeatingCount}}</p>
                            <input data-ng-show="editMode" type="text" data-ng-model="car.passengerSeatingCount" />
                        </td>
                        <td>
                            <p data-ng-hide="editMode"><a data-ng-click="toggleEdit(car)" href="javascript:;">Edit</a> | <a data-ng-click="deletecar(car)" href="javascript:;">Delete</a></p>
                            <p data-ng-show="editMode"><a data-ng-click="save(car)" href="javascript:;">Save</a> | <a data-ng-click="toggleEdit(car)" href="javascript:;">Cancel</a></p>
                        </td>
                    </tr>
                </table>                
            </div>
        </div>
    </div>
</div>
